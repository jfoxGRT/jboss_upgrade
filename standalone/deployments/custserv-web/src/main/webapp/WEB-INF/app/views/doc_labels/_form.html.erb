<% form_for(@doc_label) do |f| %>

  <font color="red">
    <%= f.error_messages %>
  </font>

  <p>
    <%= f.label :code %><br />
    <%= f.text_field :code %>
  </p>
  <p>
    <%= f.label :display_order %><br />
    <%= f.text_field :display_order %>
  </p>
  <p>
    <%= f.label :display_text %><br />
    <%= f.text_area :display_text, :size => "75x2" %>
  </p>
  <p>
    <%= f.label :display_desc %><br />
    <%= f.text_field :display_desc %>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes, :size => "75x3" %>
  </p>

  <p>
    <% if :action == "new" %>
      <%= f.submit "Create" %>
    <% else %>
      <%= f.submit "Update" %>    
    <% end %>
  </p>

<% end %>