                <%= sort_link_helper("Priority", "priority", "conversation_table", "update_table", "conversation_status_indicator")%>
            </td>
			<td>Failure Result Code</td>
        </tr>
    </thead>
    <tbody>
        <%= render(:partial => "conversation", :collection => conversation_collection, :locals => {:agent_id => agent_id}) %>
    </tbody>
</table>
<p class="page_links" align="center">
<%= will_paginate(conversation_collection, :renderer => "RemoteLinkRenderer",
                  :status_indicator => "conversation_status_indicator",
                  :update_element => "conversation_table",
                  :action => "update_table",
				  :sam_customer_id => sam_customer.id,
				  :sam_server_id => sam_server.id) %>
</p>