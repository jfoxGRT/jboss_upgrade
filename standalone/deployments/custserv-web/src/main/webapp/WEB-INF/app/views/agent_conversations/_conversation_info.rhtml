<% agent_id = sam_server.agent.id %>
<table class="data_table" style="width: 80%;">
    <thead>
        <tr class="data_table_first_row">
            <td <%= sort_td_class_helper("conversationid")%>>
                <%= sort_link_helper("Conversation Instance ID", "conversationid", "conversation_table", "update_table", "conversation_status_indicator")%>
            </td>
            <td <%= sort_td_class_helper("adapteridentifier")%>>
                <%= sort_link_helper("Adapter Identifier", "adapteridentifier", "conversation_table", "update_table", "conversation_status_indicator")%>
            </td>
            <td <%= sort_td_class_helper("conversationidentifier")%>>
                <%= sort_link_helper("Conversation Identifier", "conversationidentifier", "conversation_table", "update_table", "conversation_status_indicator")%>
            </td>
            <td <%= sort_td_class_helper("started")%>>
                <%= sort_link_helper("Started", "started", "conversation_table", "update_table", "conversation_status_indicator")%>
            </td>
            <td <%= sort_td_class_helper("completed")%>>
                <%= sort_link_helper("Completed", "completed", "conversation_table", "update_table", "conversation_status_indicator")%>
            </td>
            <td <%= sort_td_class_helper("resultmsg")%>>
